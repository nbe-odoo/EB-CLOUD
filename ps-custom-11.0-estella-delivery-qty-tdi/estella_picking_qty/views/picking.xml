<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_picking_view_form_inherit_estella" model="ir.ui.view">
        <field name="name">stock.picking.view.form.inherit.estella</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='reserved_availability']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='reserved_availability']" position="after">
                <field name="x_reserved_availability" attrs="{'column_invisible': ['|', ('parent.state','in', ['done', 'draft']), ('parent.picking_type_code', '=', 'incoming')]}"/>
                <field name="x_reset_reserve" attrs="{'column_invisible': ['|', ('parent.state','in', ['done', 'draft']), ('parent.picking_type_code', '=', 'incoming')]}"/>
            </xpath>
        </field>
    </record>
</odoo>